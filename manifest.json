{
  "name": "Googly Eyes",
  "description": "Google Chrome Extension for people with Dyslexia [Hack N Roll 2022]",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Dyslexia ruler activated",
    "default_popup": "/PopUp/popup.html"
  },
  "permissions": [ 
    "<all_urls>",
    "tabs",
    "storage"],
  "background": {
    "scripts": ["reading-line-bg.js"]
  },
  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "js":["contentScript/reading-line.js", "contentScript/changeDisplay.js"],
      "css": ["contentScript/reading-line.css"]
    }
  ]
}