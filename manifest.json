{
  "name": "Googly Eyes",
  "description": "Google Chrome Extension for people with Dyslexia [Hack N Roll 2022]",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "Dyslexia ruler activated",
    "default_popup": "/PopUp/popup.html"
  },
  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "js":["contentScript/reading-line.js", "contentScript/changeFont.js", "contentScript/changeFontColor.js"],
      "css": ["contentScript/reading-line.css", "contentScript/styles.css"]
    }
  ],
  "background": {
    "scripts": ["narrate.js", "background.js", "PopUp/popup.js"],
    "persistent": true
  },
  "permissions": [
    "storage", 
    "activeTab",
    "tabs", 
    "contextMenus", 
    "tts",
    "http://*/",
		"https://*/"
  ]
}